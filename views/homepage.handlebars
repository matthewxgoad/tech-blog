<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 card">
  <div class="col-md-5">
    <h2>
      <a href="/blogs/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>Created by {{blog.user_id}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.contents}}
    </p>
  </div>
</div>
{{/each}}
